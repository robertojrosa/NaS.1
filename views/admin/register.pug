extends layout
block content
  h2=subtitle
  div
  form(action="register", method="post", enctype="application/json")
    div.inputname email
    div
      input(type="email", name="email", required)
    div.inputname password
    div
      input(type="password", name="pwd", required)
    div.inputname confirm your password
    div
      input(type="password", name="pwd_check", required)
    div
      input(type='submit', value='send')
  
