extends layout
block content
  h2=subtitle
  div
  if(params)
    div=params
  form(action="login", method="post", enctype="application/json")
    div.inputname email
    div
      input(type="email", name="email", required)
    div.inputname password
    div
      input(type="password", name="pwd", required)
    div
      input(type='submit', value='send')
  
